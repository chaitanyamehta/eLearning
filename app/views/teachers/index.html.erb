<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Address</th>
      <th>Discipline</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.user_auth.email %></td>
        <td><%= teacher.phone_number %></td>
        <td><%= teacher.address %></td>
        <td><%= teacher.discipline.description %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Impersonate', impersonate_path, params: { user_auth_id: teacher.user_auth.id }, method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

