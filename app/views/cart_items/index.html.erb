<h1>Cart</h1>

<% if @cart_items.any? %>
<table>
  <thead>
    <tr>
      <th>Course number</th>
      <th>Course name</th>
      <th>Teacher</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.section.course.course_number %></td>
        <td><%= cart_item.section.course.name %></td>
        <td><%= cart_item.section.teacher.name %></td>
        <td><%= cart_item.section.course.price %></td>
        <td><%= link_to 'Remove', cart_item, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Clear Cart', clear_cart_path, method: :delete, data: { confirm: 'Are you sure?' } %>
<% else %>
<p>Your cart is empty.</p>
<% end%>