<%= form_with(model: [@student, @credit_card], local: true) do |form| %>
  <% if credit_card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(credit_card.errors.count, "error") %> prohibited this credit_card from being saved:</h2>

      <ul>
        <% credit_card.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name_on_card %>
    <%= form.text_field :name_on_card %>
  </div>

  <div class="field">
    <%= form.label :card_number %>
    <%= form.number_field :card_number %>
  </div>

  <div class="field">
    <%= form.label :expiration_date %>
    <%= form.date_select :expiration_date, discard_day: true, order: [:month, :year], use_two_digit_numbers: true, start_year: Date.current.year %>
  </div>

  <div class="field">
    <%= form.label :cvv, 'CVV' %>
    <%= form.number_field :cvv %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
