<% if alert %>
<p id="alert"><%= alert %></p>
<% end %>

<h1>Login</h1>
<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag("Login") %>
  </div>
<% end %>

<%= link_to 'Sign up as Student', new_student_path %>