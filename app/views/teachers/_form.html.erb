<%= form_with(model: teacher, local: true) do |form| %>
  <% if teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
        <% teacher.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <%= form.fields_for :user_auth do |user_auth_form| %>
    <div class="field">
      <%= user_auth_form.label :email %>
      <%= user_auth_form.text_field :email %>
    </div>

    <div class="field">
      <%= user_auth_form.label :password %>
      <%= user_auth_form.password_field :password %>
    </div>

    <div class="field">
      <%= user_auth_form.label :password_confirmation %>
      <%= user_auth_form.password_field :password_confirmation %>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :discipline_id %>
    <%= select("teacher", "discipline_id", Discipline.all.collect {|x| [x.description, x.id]}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
