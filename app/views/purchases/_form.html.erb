<%= form_with(model: purchase, local: true) do |form| %>
  <% if purchase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul>
        <% purchase.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if current_user.cart.cart_items.any? %>
    <table>
      <thead>
      <tr>
        <th>Course Number</th>
        <th>Course Name</th>
        <th>Section</th>
        <th>Teacher</th>
        <th>Price</th>
        <th></th>
      </tr>
      </thead>

        <tbody>
        <% current_user.cart.cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.section.course.course_number %></td>
            <td><%= cart_item.section.course.name %></td>
            <td><%= cart_item.section_id %></td>
            <td><%= cart_item.section.teacher.name %></td>
            <td><%= cart_item.section.course.price %></td>
          </tr>
        <% end %>
        </tbody>
    </table>
    <div class="actions">
      <%= form.submit 'Purchase' %>
    </div>
  <% end %>
<% end %>